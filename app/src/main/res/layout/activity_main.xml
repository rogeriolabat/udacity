<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nanodegree.udacity.com.myappportfolio.MainActivity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:text="Stock Hawk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:backgroundTint="#f08c35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:onClick="selfMessage2"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#F08C35"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:text="Faça-o maior"
        android:onClick="selfMessage3"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        tools:text="My Nanodegree Apps!"
        android:visibility="visible" />

    <Button
        android:text="Capstone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:backgroundTint="#F08C35"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:onClick="selfMessage6"
        android:visibility="visible" />

    <Button
        android:text="Filmes populares"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:backgroundTint="#F08C35"
        android:layout_marginTop="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:onClick="selfMessage1"
        android:visibility="visible" />

    <Button
        android:text="Faça seu aplicativo com Material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:backgroundTint="#F08C35"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="selfMessage4"
        android:visibility="visible" />

    <Button
        android:text="Seja onipresente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:backgroundTint="#F08C35"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:onClick="selfMessage5"
        android:visibility="visible" />

</RelativeLayout>
